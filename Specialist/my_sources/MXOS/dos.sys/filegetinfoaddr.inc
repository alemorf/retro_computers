;+---------------------------------------------------------------------------
; MXOS
; Адрес информации о найденном файлое
;
; На входе 
;   c - любое число
;
; На выходе 
;   b, de - сохраняются
;   hl - адрес информации о найденном файлое
;   zf - если a==1
;   a = c
;   c = c-1
;
; 2013-12-12 Дизассемблировано vinxru
;----------------------------------------------------------------------------

fileGetInfoAddr:push	d

		; Помещаем в hl адрес информации о файле
		lhld	v_foundedFile
		lxi	d, 9
		dad	d

		; Помещаем в A режим
		mov	a, c

		; ZF=1 если режим 1
		dcr	c

		pop	d
		ret