;+---------------------------------------------------------------------------
; MXOS
; Установить объем доступной памяти
;
; На входе
;  hl - доступная память. Если меньше 0D000h, то значение не изменяется.
;
; На выходе
;  все регистры сохраняются
;
; 2013-12-12 Дизассемблировано vinxru
;----------------------------------------------------------------------------

setMemTop:	push	psw
		mov	a, h
		cpi	0D0h
		jc	setMemTop_0
		  shld	v_memTop
setMemTop_0:	pop	psw
		ret

;----------------------------------------------------------------------------
; Получить объем доступной памяти
;
; На выходе
;  hl - доступная память
;
; На выходе
;  все регистры сохраняются
;----------------------------------------------------------------------------
		
getMemTop:	lhld	v_memTop
		ret