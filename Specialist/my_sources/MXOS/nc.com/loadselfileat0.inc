loadSelFileAt0:	call	getSelectedFile

		; Получаем адрес загрузки файла
		mvi	c, 2
		call	fileGetSetAddr
		push	d

		; Загружаем файл в начало памяти
		lxi	d, 0
		call	fileLoad2

		pop	d
		ret
