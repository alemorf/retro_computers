setCursorPosPanel:
		; Сохраняем регистры
		push	h
		push	psw
		lda	activePanel
		ana	a
		jz	loc_D9BA
		mvi	a, 96		; Половина экрана
loc_D9BA:	add	h
		mov	h, a
		shld	v_cursorY

		; Восстанавливаем регистры
		pop	psw
		pop	h
		ret
